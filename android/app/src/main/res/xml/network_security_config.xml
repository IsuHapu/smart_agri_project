<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local development and IoT devices -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Local network ranges for ESP32 mesh nodes -->
        <domain includeSubdomains="false">10.145.169.1</domain>
        <domain includeSubdomains="false">10.35.17.1</domain>
        <domain includeSubdomains="false">10.76.77.1</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">192.168.4.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for private IP ranges -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
